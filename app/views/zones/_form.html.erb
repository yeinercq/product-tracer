<%= simple_form_for zone, html: { class: "zone form--inline" } do |f| %>
  <%= form_error_notification(zone) %>

  <%= f.input :name, input_html: { class: "form-control", autofocus: true } %>
  <%= link_to "Cancelar", zones_path, class: "btn btn--light" %>

  <%= f.submit class: "btn btn--secondary" %>
<% end %>
